{# -- Component Variables -- #}

{% set this = {
    headline: params.headline ?? null,
    body: params.text ?? null,
    button: params.button ?? null,
} %}

{# -- Component Template -- #}

<div class="c-callToAction">

    <div class="c-callToAction__primary">
        <h2 class="u-headline">{{ this.headline }}</h2>
    </div>

    <div class="c-callToAction__secondary">
        {% if this.body or this.button %}

            <div class="u-wysiwyg">
                {{ this.body }}
                {% if this.button %}
                    <a href="{{ this.button.url }}" class="u-link"{% if this.button.target == '_blank' %} target="_blank" rel="noopener noreferrer nofollow"{% endif %}>{{ this.button.title }}</a>
                {% endif %}
            </div>

        {% endif %}
    </div>

</div>
