{# -- Component Variables -- #}

{% set this = {
    video: params.src|default(null),
    poster: params.thumbnail|default(null)
} %}

{# -- Component Template -- #}

{% if this.video %}
<div class="c-video">
    {% set videoPoster = get_image(this.poster) %}

    <video width="{{ this.video.width }}" height="{{ this.video.height }}" class="c-banner__video" controls poster="{{ videoPoster.src('medium') }}" preload="none">
        <source src="{{ this.video.url }}" type="{{ this.video.mime_type }}">
        Your browser does not support the video tag.
    </video>

</div>
{% endif %}
